{
  "name": "craigslist+",
  "icons": {
    "16": "craigslist.ico",
    "48": "craigslist_48.png",
    "128": "craigslist_128.png"
  },
  "version": "1.1",
  "description": "Adds keyboard navigation, stars, notes, inline images/maps and search monitoring to craigslist",
  "background_page": "background.html",
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_end",
    "matches": ["http://*.craigslist.org/*"],
    "css": ["apthunter.css", "vendor/spinner.css"],
    "js":  ["vendor/core_ext.js", "vendor/store.js", "vendor/jquery-1.4.2.js", "vendor/jquery.hotkeys.js", "apthunter.js"]
  }],
  "browser_action": {
    "default_icon": "craigslist.ico",
    "default_title": "View saved searches and results",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications"
  ]
}
